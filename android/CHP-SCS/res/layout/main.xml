<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.halici.c"
    xmlns:app1="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="@color/actions_bg" >

    <shared.ui.actionscontentview.ActionsContentView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/actionsContentView"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/topBar"
        app:content_layout="@layout/content"
        app:fade_max_value="@integer/default_pref_fade_max_value"
        app:fade_type="actions"
        app:fling_duration="@integer/default_pref_fling_delay"
        app:shadow_drawable="@drawable/shadow"
        app:shadow_width="@dimen/default_pref_shadow_width"
        app1:actions_layout="@layout/actions"
        app1:actions_spacing="@dimen/actions_spacing">
    </shared.ui.actionscontentview.ActionsContentView>


    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/top_bar_bg"
        android:orientation="horizontal" >

		<LinearLayout
		    android:id="@+id/menuLayout"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_gravity="bottom"
		    android:background="@drawable/topbar_left_bg"
		    android:orientation="horizontal"
		    android:padding="0dp" >
		        
		        <ImageButton
		            android:id="@+id/menuIcon"
		            style="@style/HoloButton.Borderless"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_gravity="bottom"
		            android:contentDescription="@null"
		            android:onClick="onActionsButtonClick"
		            android:padding="0dp"
		            android:src="@drawable/topbar_menuicon" />

		</LinearLayout>

        <TextView
            android:id="@+id/topBarHeader"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="left|center_horizontal"
            android:paddingLeft="10dp"
            android:text="@string/app_header"
            android:textColor="@color/header_text"
            android:textSize="22sp" />

        <ImageView
            android:id="@+id/hedaerLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:contentDescription="@null"
            android:src="@drawable/topbar_chp_logo" />

    </LinearLayout>

</RelativeLayout>